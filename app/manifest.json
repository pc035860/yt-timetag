{
  "name": "TimeTags for YouTube",
  "version": "1.4.3",
  "manifest_version": 2,
  "description": "Create YouTube time tags with simple keyboard shortcuts",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*",
        "*://youtu.be/*"
      ],
      "js": [
        "ytapi.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "TimeTags for YouTube"
  },
  "permissions": [
    "storage",

    "https://www.youtube.com/",
    "https://youtu.be/",
    "https://cloud.pymaster.tw/",
    "https://us-central1-yt-timetag.cloudfunctions.net/"
  ],
  "web_accessible_resources": [
    "contentscript.js.map",
    "*.png"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "yt-timetag@pymaster.tw",
      "strict_min_version": "78.0"
    }
  }
}
