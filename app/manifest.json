{
  "name": "YouTube Time Tag",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Create YouTube time tags with ease",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "build/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "YouTube Time Tag"
  },
  "permissions": [
    "tabs"
  ]
}
